<!doctype html>
<html lang="en">

<head>
    <title>QuizzJS</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/telephone.css">
</head>

<body>
    <div class="wrapper">
        <div class="modal fade" id="modalUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Veuillez saisir vos informations</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="recipient-name" class="control-label">Pseudonyme</label>
                                <input id="pseudo" type="text" class="form-control" id="recipient-name">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <a href="/" class="btn btn-default" data-dismiss="modal">Annuler</a>
                        <button id="begin" type="button" class="btn btn-primary">Commencer Ã  jouer</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex-container">
            <button type="button" class="btn btn-success"></button>
            <button type="button" class="btn btn-warning"></button>
            <button type="button" class="btn btn btn-info"></button>
            <button type="button" class="btn btn btn-danger"></button>
        </div>
    </div>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#modalUser').modal('show');
        });
        $("#begin").click(function() {
            var socket = io.connect('http://<%=url%>');
            socket.emit('user', $('#pseudo').val());
            $('#modalUser').modal('hide');
        });
    </script>
</body>

</html>
